<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="yuan.spring.boot.mapper.master.UserMapper" >
    <resultMap id="BaseResultMap" type="yuan.spring.boot.model.User" >
        <id column="ID" property="id" jdbcType="INTEGER" />
        <result column="name" property="name" jdbcType="VARCHAR" />
        <result column="age" property="age" jdbcType="INTEGER" />
        <result column="password" property="password" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Base_Column_List" >
        id, name, age, password
    </sql>

    <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Long" >
        select
        <include refid="Base_Column_List" />
        from user
        where ID = #{id,jdbcType=BIGINT}
    </select>

    <select id="selectByage" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
        select
        <include refid="Base_Column_List" />
        from user
        where age = #{age,jdbcType=BIGINT}
    </select>

    <select id="selectAllUsers" resultMap="BaseResultMap" >
        select
        <include refid="Base_Column_List" />
        from user
    </select>





</mapper>